{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"rules": {
		"indent": ["off", "tab",{"SwitchCase": 1}],
		"no-mixed-spaces-and-tabs": ["off"],
		"linebreak-style": ["off", "unix"],
		"quotes": ["off", "double"],
		"semi": ["error", "always"],
		"brace-style": ["error", "allman"],
		"no-var": ["error"],
		"no-empty": ["error", {"allowEmptyCatch": true}]
	}
}
